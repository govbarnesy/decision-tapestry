{
  "name": "decision-tapestry-vscode",
  "displayName": "Decision Tapestry",
  "description": "A VS Code extension for visualizing and managing architectural decisions.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:decision-tapestry.showDashboard"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "decision-tapestry.showDashboard",
        "title": "Show Dashboard",
        "category": "Decision Tapestry"
      },
      {
        "command": "decision-tapestry.createDecision",
        "title": "Create New Decision",
        "category": "Decision Tapestry"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "decision-tapestry-sidebar",
          "title": "Decision Tapestry",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "decision-tapestry-sidebar": [
        {
          "id": "decision-tapestry-dashboard-view",
          "name": "Dashboard",
          "type": "webview"
        }
      ]
    },
    "yamlValidation": [
      {
        "fileMatch": "decisions.yml",
        "url": "./schemas/decision-schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "package": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "lint": "eslint src",
    "test": "echo 'No tests for extension yet'",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.2",
    "semantic-release": "^24.2.5",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "semanticRelease": {
    "branches": ["main", "release-automation"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      ["@semantic-release/changelog", {
        "changelogFile": "CHANGELOG.md"
      }],
      ["@semantic-release/git", {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }],
      "@semantic-release/github"
    ]
  }
}
