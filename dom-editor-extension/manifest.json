{
  "manifest_version": 3,
  "name": "Decision Tapestry DOM Editor",
  "version": "1.0.0",
  "description": "Visual DOM and CSS editor for Decision Tapestry development",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://localhost:8080/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "devtools_page": "devtools.html"
}
